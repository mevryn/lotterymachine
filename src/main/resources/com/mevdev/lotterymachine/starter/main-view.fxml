<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mevdev.lotterymachine.starter.MainViewController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <ButtonBar>
      <buttons>
         <Button mnemonicParsing="false" onAction="#onFileChooserClick" prefHeight="153.0" prefWidth="159.0" text="%fileChooser" />
         <Label fx:id="fileChosen" alignment="CENTER_RIGHT" contentDisplay="CENTER" text="%selectedFile" textAlignment="RIGHT" />
      </buttons>
   </ButtonBar>
   <ButtonBar prefHeight="0.0" prefWidth="348.0" GridPane.rowIndex="2">
     <buttons>
         <Label fx:id="welcomeText" prefHeight="17.0" prefWidth="80.0" text="%choseFile" />
         <Button fx:id="drawButton" onAction="#onHelloButtonClick" prefHeight="30.0" prefWidth="102.0" text="%draw" />
     </buttons>
   </ButtonBar>
</GridPane>
